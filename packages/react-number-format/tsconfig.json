{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "rootDir": "src",
    "strictNullChecks": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "types", "**/*.test.ts", "**/*.test.tsx"]
}
